<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/transparent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <!-- Основной контейнер карты -->
    <RelativeLayout
        android:id="@+id/cardRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:padding="16dp"
        android:background="@drawable/bg_bank_card">

        <!-- Чип слева -->
        <ImageView
            android:id="@+id/ivChip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_card_chip"
            android:layout_alignParentStart="true" />

        <!-- Платёжная система (МИР / VISA / MC) -->
        <TextView
            android:id="@+id/tvCardSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="МИР"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp" />

        <!-- НАЗВАНИЕ КАРТЫ — теперь сверху вместо "Последние цифры" -->
        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Моя карта"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/ivChip"
            android:layout_marginTop="28dp" />

        <!-- Строка номера -->
        <LinearLayout
            android:id="@+id/llCardNumberRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvCardName"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <!-- Маска номера -->
            <TextView
                android:id="@+id/tvCardMasked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="••••   ••••   ••••"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:letterSpacing="0.1" />

            <!-- Отступ между маской и цифрами -->
            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- Последние 4 цифры -->
            <TextView
                android:id="@+id/tvCardLast4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Кэшбэк: рубли / мили (правый нижний угол) -->
        <TextView
            android:id="@+id/tvCashbackUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/llCardNumberRow"
            android:layout_alignBottom="@id/llCardNumberRow"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="РУБ"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:alpha="0.9"/>

    </RelativeLayout>

</LinearLayout>
