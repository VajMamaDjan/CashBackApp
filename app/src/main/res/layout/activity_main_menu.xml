<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок + кнопка профиля -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/titleContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Главное меню"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Управление банками и кешбэком"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text" />
            </LinearLayout>

            <!-- Кнопка профиля -->
            <FrameLayout
                android:id="@+id/profileButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_profile_button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:elevation="6dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile_user" />
            </FrameLayout>

        </RelativeLayout>

        <!-- Большая фиолетовая карточка "Добавить банк" -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/bg_add_category">

                <FrameLayout
                    android:id="@+id/flAddIconHolder"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_circle"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/ivAddIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        card_view:tint="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/addBankTextContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/flAddIconHolder"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAddTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Добавить банк"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Заголовок секции "Мои банки" -->
        <TextView
            android:id="@+id/tvMyBanksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои банки"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- Карточка банка: Сбер -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBankSber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="0dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_month_current">

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sber" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvBankNameSber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сбер"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvBankSubtitleSber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="категорий выбрано 0 из 5"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Карточка банка: ТБанк -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBankTBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_month_current">

                <androidx.cardview.widget.CardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    card_view:cardCornerRadius="14dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_tbank"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvBankNameTBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ТБанк"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvBankSubtitleTBank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="категорий выбрано 0 из 5"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
