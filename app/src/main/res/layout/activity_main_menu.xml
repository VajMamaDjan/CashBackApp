<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="28dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главное меню"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Управление категориями кэшбэка"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="24dp" />

        <!-- Большая фиолетовая карточка "Добавить категорию" -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="0dp"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/bg_add_category">

                <FrameLayout
                    android:id="@+id/flAddIconHolder"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_circle"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/ivAddIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        card_view:tint="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/flAddIconHolder"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAddTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Добавить категорию"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tvAddDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Создать новую категорию кэшбэка"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Карточка "Текущий месяц" -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCurrentMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="0dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/bg_month_current">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_icon_circle_green">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        card_view:tint="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCurrentMonthTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Текущий месяц"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvCurrentMonthSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ноябрь 2025 г."
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Карточка "Предыдущий месяц" -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreviousMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="0dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/bg_month_previous">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_icon_circle_blue">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_history"
                        card_view:tint="@android:color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPreviousMonthTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Предыдущий месяц"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvPreviousMonthSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="октябрь 2025 г."
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Карточка "Совет" -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="24dp"
            card_view:cardElevation="0dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/bg_tip_card"
                android:gravity="top">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lightbulb"
                    android:layout_marginTop="4dp"
                    card_view:tint="@color/tip_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Совет"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Регулярно проверяйте свои категории, чтобы увеличить кэшбэк с каждой покупки"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
