<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- превью цвета -->
    <View
        android:id="@+id/viewColorPreview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:background="#FF8A3CFF" />

    <!-- R -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="R"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- G -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="G"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekG"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- B -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="13sp" />

        <SeekBar
            android:id="@+id/seekB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Hex -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hex"
        android:textSize="13sp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tvHexValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#FFFFFF"
        android:textSize="14sp"
        android:typeface="monospace"
        android:layout_marginBottom="12dp" />

    <!-- пресеты цветов -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/preset1"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/preset2"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/preset3"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/preset4"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/preset5"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/preset6"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
