<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textTitleRecovery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Восстановление доступа"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#333333" />

        <!-- Секретный вопрос -->
        <TextView
            android:id="@+id/textSecretQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Секретный вопрос"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#333333" />

        <!-- Ответ на секретный вопрос -->
        <EditText
            android:id="@+id/editTextSecretAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ответ на секретный вопрос"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp"
            android:maxLines="1" />

        <!-- Кнопка проверки ответа -->
        <Button
            android:id="@+id/btnRecover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердить ответ"
            android:textSize="16sp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"
            android:paddingVertical="14dp"
            android:layout_marginBottom="16dp" />

        <!-- Результат проверки -->
        <TextView
            android:id="@+id/textRecoveryResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#666666"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- БЛОК: Новый пароль (по умолчанию скрыт) -->
        <LinearLayout
            android:id="@+id/newPasswordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Новый пароль"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите новый пароль"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="12dp"
                android:maxLines="1"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Подтвердите новый пароль"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#666666" />

            <EditText
                android:id="@+id/editTextConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Повторите новый пароль"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"
                android:maxLines="1"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnSaveNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить новый пароль"
                android:textSize="16sp"
                android:background="@drawable/button_primary"
                android:textColor="@android:color/white"
                android:paddingVertical="14dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Кнопка "Назад к входу" -->
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назад к входу"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:textColor="#2196F3"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
