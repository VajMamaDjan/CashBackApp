<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Восстановление доступа"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textColor="#333333" />

    <!-- Секретный вопрос -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Секретный вопрос:"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/textSecretQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузка..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="#333333"
        android:padding="12dp"
        android:background="#F5F5F5"
        android:gravity="center" />

    <!-- Ответ на вопрос -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваш ответ:"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:textColor="#666666" />

    <EditText
        android:id="@+id/editTextSecretAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите ответ"
        android:textSize="16sp"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="24dp"
        android:maxLines="1" />

    <!-- Кнопка восстановления -->
    <Button
        android:id="@+id/btnRecover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Восстановить данные"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:paddingVertical="14dp"
        android:layout_marginBottom="16dp" />

    <!-- Результат восстановления -->
    <TextView
        android:id="@+id/textRecoveryResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#2196F3"
        android:padding="16dp"
        android:background="#E3F2FD"
        android:visibility="gone" />

    <!-- Кнопка назад -->
    <Button
        android:id="@+id/btnBackToLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:textSize="16sp"
        android:background="@drawable/button_secondary"
        android:textColor="#666666"
        android:paddingVertical="14dp" />

</LinearLayout>